#!/usr/bin/env ruby
require "rubygems"
require "bundler/setup"

ARGV.unshift("--ensure-latest")

# Skip Evaluation check (Dangerous Eval warnings)
# lib/code_evaluator.rb intentionally uses eval() for game logic (code evaluation game)
# The code is protected with timeout and sandboxed execution
ARGV.unshift("--skip-checks", "Evaluation")

load Gem.bin_path("brakeman", "brakeman")
